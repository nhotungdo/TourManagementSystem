<Window x:Class="TourManagementSystem.Views.AdminMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tour Management System - Admin Dashboard" 
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#F5F5F5">
    
    <Window.Resources>
        <Style x:Key="MenuButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E3F2FD"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#BBDEFB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ActiveMenuButton" TargetType="Button" BasedOn="{StaticResource MenuButton}">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" 
                Background="White" 
                BorderBrush="#E0E0E0" 
                BorderThickness="0,0,1,0">
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" 
                        Background="#2196F3" 
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text="ðŸ‘¨â€ðŸ’¼ Admin Panel" 
                                 FontSize="18" 
                                 FontWeight="Bold" 
                                 Foreground="White"/>
                        <TextBlock x:Name="UserNameText" 
                                 FontSize="12" 
                                 Foreground="#E3F2FD" 
                                 Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Navigation Menu -->
                <ScrollViewer Grid.Row="1" 
                            VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="0,20">
                        
                        <!-- Dashboard -->
                        <Button Content="ðŸ“Š Dashboard" 
                              Style="{StaticResource MenuButton}"
                              Click="DashboardButton_Click"
                              x:Name="DashboardButton"/>

                        <!-- User Management -->
                        <Button Content="ðŸ‘¥ User Management" 
                              Style="{StaticResource MenuButton}"
                              Click="UserManagementButton_Click"
                              x:Name="UserManagementButton"/>

                        <!-- Tour Management -->
                        <Button Content="ðŸ—ºï¸ Tour Management" 
                              Style="{StaticResource MenuButton}"
                              Click="TourManagementButton_Click"
                              x:Name="TourManagementButton"/>

                        <!-- Schedule Management -->
                        <Button Content="ðŸ“… Schedule Management" 
                              Style="{StaticResource MenuButton}"
                              Click="ScheduleManagementButton_Click"
                              x:Name="ScheduleManagementButton"/>

                        <!-- Booking Management -->
                        <Button Content="ðŸ“‹ Booking Management" 
                              Style="{StaticResource MenuButton}"
                              Click="BookingManagementButton_Click"
                              x:Name="BookingManagementButton"/>

                        <!-- Payment Management -->
                        <Button Content="ðŸ’³ Payment Management" 
                              Style="{StaticResource MenuButton}"
                              Click="PaymentManagementButton_Click"
                              x:Name="PaymentManagementButton"/>

                        <!-- Invoice Management -->
                        <Button Content="ðŸ§¾ Invoice Management" 
                              Style="{StaticResource MenuButton}"
                              Click="InvoiceManagementButton_Click"
                              x:Name="InvoiceManagementButton"/>

                        <!-- Promotion Management -->
                        <Button Content="ðŸŽ Promotion Management" 
                              Style="{StaticResource MenuButton}"
                              Click="PromotionManagementButton_Click"
                              x:Name="PromotionManagementButton"/>

                        <!-- Review Management -->
                        <Button Content="â­ Review Management" 
                              Style="{StaticResource MenuButton}"
                              Click="ReviewManagementButton_Click"
                              x:Name="ReviewManagementButton"/>

                        <!-- Attraction Management -->
                        <Button Content="ðŸžï¸ Attraction Management" 
                              Style="{StaticResource MenuButton}"
                              Click="AttractionManagementButton_Click"
                              x:Name="AttractionManagementButton"/>

                        <!-- Activity Logs -->
                        <Button Content="ðŸ“ Activity Logs" 
                              Style="{StaticResource MenuButton}"
                              Click="ActivityLogsButton_Click"
                              x:Name="ActivityLogsButton"/>

                        <!-- System Configuration -->
                        <Button Content="âš™ï¸ System Configuration" 
                              Style="{StaticResource MenuButton}"
                              Click="SystemConfigButton_Click"
                              x:Name="SystemConfigButton"/>

                        <!-- Reports -->
                        <Button Content="ðŸ“ˆ Reports &amp; Analytics" 
                              Style="{StaticResource MenuButton}"
                              Click="ReportsButton_Click"
                              x:Name="ReportsButton"/>

                    </StackPanel>
                </ScrollViewer>

                <!-- Logout -->
                <Border Grid.Row="2" 
                        Background="#F5F5F5" 
                        Padding="20">
                    <Button Content="ðŸšª Logout" 
                          Style="{StaticResource MenuButton}"
                          Click="LogoutButton_Click"
                          Background="#FF5722"
                          Foreground="White"/>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Border Grid.Column="1" 
                Background="White" 
                Margin="10">
            <Frame x:Name="MainFrame" 
                 NavigationUIVisibility="Hidden"/>
        </Border>
    </Grid>
</Window> 