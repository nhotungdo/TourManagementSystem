<Page x:Class="TourManagementSystem.Views.PromotionsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Promotions" 
      Background="White">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="🎁 Promotions" 
                         FontSize="28" 
                         FontWeight="Bold" 
                         Foreground="#333"
                         Margin="0,0,0,10"/>
                <TextBlock Text="View available promotions and discounts" 
                         FontSize="14" 
                         Foreground="#666"/>
            </StackPanel>

            <!-- Promotions List -->
            <ScrollViewer Grid.Row="1" x:Name="PromotionsScrollViewer">
                <StackPanel x:Name="PromotionsStackPanel">
                    <!-- Promotions will be loaded here dynamically -->
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </ScrollViewer>
</Page> 