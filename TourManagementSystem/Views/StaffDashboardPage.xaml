<Page x:Class="TourManagementSystem.Views.StaffDashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Staff Dashboard" 
      Background="White">
    
    <Page.Resources>
        <Style x:Key="StatCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="QuickActionButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0D47A1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="AlertCard" TargetType="Border">
            <Setter Property="Background" Value="#FFF3E0"/>
            <Setter Property="BorderBrush" Value="#FF9800"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="ðŸ“Š Staff Dashboard" 
                         FontSize="28" 
                         FontWeight="Bold" 
                         Foreground="#333"
                         Margin="0,0,0,10"/>
                <TextBlock Text="Welcome to your staff dashboard. Here's an overview of today's activities and important information." 
                         FontSize="14" 
                         Foreground="#666"/>
            </StackPanel>

            <!-- Quick Statistics -->
            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Today's Bookings -->
                <Border Grid.Column="0" Style="{StaticResource StatCard}">
                    <StackPanel>
                        <TextBlock Text="ðŸ“‹ Today's Bookings" 
                                 FontSize="16" 
                                 FontWeight="SemiBold" 
                                 Foreground="#666"/>
                        <TextBlock x:Name="TodayBookingsText" 
                                 Text="0" 
                                 FontSize="32" 
                                 FontWeight="Bold" 
                                 Foreground="#4CAF50"/>
                        <TextBlock Text="New reservations" 
                                 FontSize="12" 
                                 Foreground="#999"/>
                    </StackPanel>
                </Border>

                <!-- Pending Payments -->
                <Border Grid.Column="1" Style="{StaticResource StatCard}">
                    <StackPanel>
                        <TextBlock Text="ðŸ’³ Pending Payments" 
                                 FontSize="16" 
                                 FontWeight="SemiBold" 
                                 Foreground="#666"/>
                        <TextBlock x:Name="PendingPaymentsText" 
                                 Text="0" 
                                 FontSize="32" 
                                 FontWeight="Bold" 
                                 Foreground="#FF9800"/>
                        <TextBlock Text="Awaiting processing" 
                                 FontSize="12" 
                                 Foreground="#999"/>
                    </StackPanel>
                </Border>

                <!-- Active Tours -->
                <Border Grid.Column="2" Style="{StaticResource StatCard}">
                    <StackPanel>
                        <TextBlock Text="ðŸ—ºï¸ Active Tours" 
                                 FontSize="16" 
                                 FontWeight="SemiBold" 
                                 Foreground="#666"/>
                        <TextBlock x:Name="ActiveToursText" 
                                 Text="0" 
                                 FontSize="32" 
                                 FontWeight="Bold" 
                                 Foreground="#2196F3"/>
                        <TextBlock Text="Currently running" 
                                 FontSize="12" 
                                 Foreground="#999"/>
                    </StackPanel>
                </Border>

                <!-- New Reviews -->
                <Border Grid.Column="3" Style="{StaticResource StatCard}">
                    <StackPanel>
                        <TextBlock Text="â­ New Reviews" 
                                 FontSize="16" 
                                 FontWeight="SemiBold" 
                                 Foreground="#666"/>
                        <TextBlock x:Name="NewReviewsText" 
                                 Text="0" 
                                 FontSize="32" 
                                 FontWeight="Bold" 
                                 Foreground="#9C27B0"/>
                        <TextBlock Text="Require attention" 
                                 FontSize="12" 
                                 Foreground="#999"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Quick Actions -->
            <Border Grid.Row="2" Style="{StaticResource StatCard}" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="âš¡ Quick Actions" 
                             FontSize="20" 
                             FontWeight="Bold" 
                             Margin="0,0,0,15"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Content="ðŸ“‹ New Booking" 
                              Grid.Column="0"
                              Style="{StaticResource QuickActionButton}"
                              Margin="5"
                              Click="NewBookingButton_Click"/>

                        <Button Content="ðŸ’³ Process Payment" 
                              Grid.Column="1"
                              Style="{StaticResource QuickActionButton}"
                              Margin="5"
                              Click="ProcessPaymentButton_Click"/>

                        <Button Content="ðŸ§¾ Generate Invoice" 
                              Grid.Column="2"
                              Style="{StaticResource QuickActionButton}"
                              Margin="5"
                              Click="GenerateInvoiceButton_Click"/>

                        <Button Content="â­ Review Response" 
                              Grid.Column="3"
                              Style="{StaticResource QuickActionButton}"
                              Margin="5"
                              Click="ReviewResponseButton_Click"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Recent Activities and Alerts -->
            <Grid Grid.Row="3" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Recent Activities -->
                <Border Grid.Column="0" Style="{StaticResource StatCard}" Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="ðŸ“ˆ Recent Activities" 
                                 FontSize="18" 
                                 FontWeight="Bold" 
                                 Margin="0,0,0,15"/>
                        
                        <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                            <StackPanel x:Name="RecentActivitiesPanel">
                                <!-- Activities will be added dynamically -->
                            </StackPanel>
                        </ScrollViewer>
                    </StackPanel>
                </Border>

                <!-- Important Alerts -->
                <Border Grid.Column="1" Style="{StaticResource StatCard}" Margin="10,0,0,0">
                    <StackPanel>
                        <TextBlock Text="âš ï¸ Important Alerts" 
                                 FontSize="18" 
                                 FontWeight="Bold" 
                                 Margin="0,0,0,15"/>
                        
                        <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                            <StackPanel x:Name="AlertsPanel">
                                <!-- Alerts will be added dynamically -->
                            </StackPanel>
                        </ScrollViewer>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Upcoming Tours -->
            <Border Grid.Row="4" Style="{StaticResource StatCard}">
                <StackPanel>
                    <TextBlock Text="ðŸ—“ï¸ Upcoming Tours (Next 7 Days)" 
                             FontSize="18" 
                             FontWeight="Bold" 
                             Margin="0,0,0,15"/>
                    
                    <DataGrid x:Name="UpcomingToursDataGrid" 
                            AutoGenerateColumns="False"
                            CanUserAddRows="False"
                            CanUserDeleteRows="False"
                            CanUserReorderColumns="True"
                            CanUserResizeColumns="True"
                            GridLinesVisibility="Horizontal"
                            HeadersVisibility="Column"
                            MaxHeight="200">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Tour Name" 
                                              Binding="{Binding TourName}" 
                                              Width="200"/>
                            <DataGridTextColumn Header="Departure Date" 
                                              Binding="{Binding DepartureDate, StringFormat=dd/MM/yyyy}" 
                                              Width="120"/>
                            <DataGridTextColumn Header="Guide" 
                                              Binding="{Binding Guide.FullName}" 
                                              Width="150"/>
                            <DataGridTextColumn Header="Bookings" 
                                              Binding="{Binding CurrentBookings}" 
                                              Width="80"/>
                            <DataGridTextColumn Header="Capacity" 
                                              Binding="{Binding MaxCapacity}" 
                                              Width="80"/>
                            <DataGridTextColumn Header="Status" 
                                              Binding="{Binding Status}" 
                                              Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</Page> 