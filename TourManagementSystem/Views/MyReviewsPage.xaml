<Page x:Class="TourManagementSystem.Views.MyReviewsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="My Reviews" 
      Background="White">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="â­ My Reviews" 
                         FontSize="28" 
                         FontWeight="Bold" 
                         Foreground="#333"
                         Margin="0,0,0,10"/>
                <TextBlock Text="View and manage your tour reviews" 
                         FontSize="14" 
                         Foreground="#666"/>
            </StackPanel>

            <!-- Reviews List -->
            <ScrollViewer Grid.Row="1" x:Name="ReviewsScrollViewer">
                <StackPanel x:Name="ReviewsStackPanel">
                    <!-- Reviews will be loaded here dynamically -->
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </ScrollViewer>
</Page> 