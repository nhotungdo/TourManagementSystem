<Window x:Class="TourManagementSystem.Views.EditAttractionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Attraction" 
        Height="550" 
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="White">
    
    <Window.Resources>
        <!-- Form TextBox Style -->
        <Style x:Key="FormTextBox" TargetType="TextBox">
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <!-- Form ComboBox Style -->
        <Style x:Key="FormComboBox" TargetType="ComboBox">
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <!-- Action Button Style -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Cancel Button Style -->
        <Style x:Key="CancelButton" TargetType="Button">
            <Setter Property="Background" Value="#F44336"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D32F2F"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="🏔️ Edit Attraction" 
                     FontSize="24" 
                     FontWeight="Bold" 
                     Margin="0,0,0,5"/>
            <TextBlock Text="Update attraction information" 
                     FontSize="14" 
                     Foreground="#666"/>
        </StackPanel>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Attraction Name -->
                <TextBlock Text="Attraction Name *" 
                         FontSize="14" 
                         FontWeight="SemiBold"/>
                <TextBox x:Name="AttractionNameTextBox" 
                       Style="{StaticResource FormTextBox}"
                       MaxLength="100"/>

                <!-- Location -->
                <TextBlock Text="Location *" 
                         FontSize="14" 
                         FontWeight="SemiBold"/>
                <TextBox x:Name="LocationTextBox" 
                       Style="{StaticResource FormTextBox}"
                       MaxLength="100"/>

                <!-- Description -->
                <TextBlock Text="Description *" 
                         FontSize="14" 
                         FontWeight="SemiBold"/>
                <TextBox x:Name="DescriptionTextBox" 
                       Style="{StaticResource FormTextBox}"
                       MaxLength="500"
                       TextWrapping="Wrap"
                       AcceptsReturn="True"
                       Height="100"/>

                <!-- Image URL -->
                <TextBlock Text="Image URL" 
                         FontSize="14" 
                         FontWeight="SemiBold"/>
                <TextBox x:Name="ImageUrlTextBox" 
                       Style="{StaticResource FormTextBox}"
                       MaxLength="255"/>
                
                <TextBlock Text="(Optional - Leave empty if no image)" 
                         FontSize="12" 
                         Foreground="#666" 
                         Margin="0,-10,0,15"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                  Orientation="Horizontal" 
                  HorizontalAlignment="Right" 
                  Margin="0,20,0,0">
            <Button Content="Cancel" 
                  Style="{StaticResource CancelButton}"
                  Click="CancelButton_Click"
                  Margin="0,0,10,0"/>
            <Button Content="Update Attraction" 
                  Style="{StaticResource ActionButton}"
                  Click="UpdateAttractionButton_Click"/>
        </StackPanel>
    </Grid>
</Window> 