<Page x:Class="TourManagementSystem.Views.AdminDashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Admin Dashboard"
      Background="White">
    
    <Page.Resources>
        <Style x:Key="StatCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#20000000" Direction="270" ShadowDepth="2" BlurRadius="4"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="StatValue" TargetType="TextBlock">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2196F3"/>
        </Style>

        <Style x:Key="StatLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
        </Style>
    </Page.Resources>

    <ScrollViewer>
        <StackPanel Margin="20">
            
            <!-- Header -->
            <TextBlock Text="ðŸ“Š Admin Dashboard" 
                     FontSize="28" 
                     FontWeight="Bold" 
                     Margin="0,0,0,20"/>

            <!-- Statistics Cards -->
            <Grid Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Total Users -->
                <Border Grid.Column="0" 
                        Style="{StaticResource StatCard}" 
                        Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="ðŸ‘¥" FontSize="24" HorizontalAlignment="Left"/>
                        <TextBlock x:Name="TotalUsersText" 
                                 Text="0" 
                                 Style="{StaticResource StatValue}"/>
                        <TextBlock Text="Total Users" 
                                 Style="{StaticResource StatLabel}"/>
                    </StackPanel>
                </Border>

                <!-- Total Tours -->
                <Border Grid.Column="1" 
                        Style="{StaticResource StatCard}" 
                        Margin="5,0,5,0">
                    <StackPanel>
                        <TextBlock Text="ðŸ—ºï¸" FontSize="24" HorizontalAlignment="Left"/>
                        <TextBlock x:Name="TotalToursText" 
                                 Text="0" 
                                 Style="{StaticResource StatValue}"/>
                        <TextBlock Text="Active Tours" 
                                 Style="{StaticResource StatLabel}"/>
                    </StackPanel>
                </Border>

                <!-- Total Bookings -->
                <Border Grid.Column="2" 
                        Style="{StaticResource StatCard}" 
                        Margin="5,0,5,0">
                    <StackPanel>
                        <TextBlock Text="ðŸ“‹" FontSize="24" HorizontalAlignment="Left"/>
                        <TextBlock x:Name="TotalBookingsText" 
                                 Text="0" 
                                 Style="{StaticResource StatValue}"/>
                        <TextBlock Text="Total Bookings" 
                                 Style="{StaticResource StatLabel}"/>
                    </StackPanel>
                </Border>

                <!-- Total Revenue -->
                <Border Grid.Column="3" 
                        Style="{StaticResource StatCard}" 
                        Margin="10,0,0,0">
                    <StackPanel>
                        <TextBlock Text="ðŸ’°" FontSize="24" HorizontalAlignment="Left"/>
                        <TextBlock x:Name="TotalRevenueText" 
                                 Text="$0" 
                                 Style="{StaticResource StatValue}"/>
                        <TextBlock Text="Total Revenue" 
                                 Style="{StaticResource StatLabel}"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Recent Activity and Quick Actions -->
            <Grid Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Recent Activity -->
                <Border Grid.Column="0" 
                        Style="{StaticResource StatCard}" 
                        Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="ðŸ“ Recent Activity" 
                                 FontSize="18" 
                                 FontWeight="Bold" 
                                 Margin="0,0,0,15"/>
                        
                        <ScrollViewer Height="300" 
                                    VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="ActivityList">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Margin="0,0,0,10" 
                                                Padding="15" 
                                                Background="#F8F9FA" 
                                                CornerRadius="5">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <TextBlock Grid.Column="0" 
                                                         Text="{Binding Icon}" 
                                                         FontSize="16" 
                                                         Margin="0,0,10,0"/>
                                                
                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="{Binding Description}" 
                                                             FontWeight="SemiBold"/>
                                                    <TextBlock Text="{Binding UserName}" 
                                                             FontSize="12" 
                                                             Foreground="#666"/>
                                                </StackPanel>
                                                
                                                <TextBlock Grid.Column="2" 
                                                         Text="{Binding TimeAgo}" 
                                                         FontSize="12" 
                                                         Foreground="#999"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>
                </Border>

                <!-- Quick Actions -->
                <Border Grid.Column="1" 
                        Style="{StaticResource StatCard}" 
                        Margin="10,0,0,0">
                    <StackPanel>
                        <TextBlock Text="âš¡ Quick Actions" 
                                 FontSize="18" 
                                 FontWeight="Bold" 
                                 Margin="0,0,0,15"/>
                        
                        <Button Content="âž• Add New Tour" 
                              Style="{StaticResource ModernButton}"
                              Click="AddTourButton_Click"
                              Margin="0,0,0,10"/>
                        
                        <Button Content="ðŸ‘¥ Add New User" 
                              Style="{StaticResource ModernButton}"
                              Click="AddUserButton_Click"
                              Margin="0,0,0,10"/>
                        
                        <Button Content="ðŸ“… Create Schedule" 
                              Style="{StaticResource ModernButton}"
                              Click="CreateScheduleButton_Click"
                              Margin="0,0,0,10"/>
                        
                        <Button Content="ðŸŽ Add Promotion" 
                              Style="{StaticResource ModernButton}"
                              Click="AddPromotionButton_Click"
                              Margin="0,0,0,10"/>
                        
                        <Button Content="ðŸ“Š View Reports" 
                              Style="{StaticResource ModernButton}"
                              Click="ViewReportsButton_Click"
                              Margin="0,0,0,10"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Charts Section -->
            <Border Style="{StaticResource StatCard}">
                <StackPanel>
                    <TextBlock Text="ðŸ“ˆ Revenue &amp; Bookings Overview" 
                             FontSize="18" 
                             FontWeight="Bold" 
                             Margin="0,0,0,15"/>
                    
                    <Grid Height="300">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Revenue Chart Placeholder -->
                        <Border Grid.Column="0" 
                                Background="#F8F9FA" 
                                Margin="0,0,10,0" 
                                CornerRadius="5">
                            <TextBlock Text="ðŸ“Š Revenue Chart" 
                                     HorizontalAlignment="Center" 
                                     VerticalAlignment="Center" 
                                     FontSize="16" 
                                     Foreground="#666"/>
                        </Border>

                        <!-- Bookings Chart Placeholder -->
                        <Border Grid.Column="1" 
                                Background="#F8F9FA" 
                                Margin="10,0,0,0" 
                                CornerRadius="5">
                            <TextBlock Text="ðŸ“‹ Bookings Chart" 
                                     HorizontalAlignment="Center" 
                                     VerticalAlignment="Center" 
                                     FontSize="16" 
                                     Foreground="#666"/>
                        </Border>
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page> 