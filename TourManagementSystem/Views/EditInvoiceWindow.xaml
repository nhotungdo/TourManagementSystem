<Window x:Class="TourManagementSystem.Views.EditInvoiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Edit Invoice" 
        Height="700" 
        Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="White">
    
    <Window.Resources>
        <!-- Form TextBox Style -->
        <Style x:Key="FormTextBox" TargetType="TextBox">
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <!-- Form ComboBox Style -->
        <Style x:Key="FormComboBox" TargetType="ComboBox">
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <!-- Read-only TextBox Style -->
        <Style x:Key="ReadOnlyTextBox" TargetType="TextBox" BasedOn="{StaticResource FormTextBox}">
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="Foreground" Value="#666"/>
        </Style>

        <!-- Action Button Style -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Cancel Button Style -->
        <Style x:Key="CancelButton" TargetType="Button">
            <Setter Property="Background" Value="#F44336"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D32F2F"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Info Text Style -->
        <Style x:Key="InfoText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="Margin" Value="0,-10,0,15"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="ðŸ§¾ Edit Invoice" 
                     FontSize="24" 
                     FontWeight="Bold" 
                     Margin="0,0,0,5"/>
            <TextBlock Text="Edit invoice details" 
                     FontSize="14" 
                     Foreground="#666"/>
        </StackPanel>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Invoice Number (Read-only) -->
                <TextBlock Text="Invoice Number" 
                         FontSize="14" 
                         FontWeight="SemiBold"/>
                <TextBox x:Name="InvoiceNumberTextBox" 
                       Style="{StaticResource ReadOnlyTextBox}"/>

                <!-- Customer Info (Read-only) -->
                <TextBlock Text="Customer" 
                         FontSize="14" 
                         FontWeight="SemiBold"/>
                <TextBox x:Name="CustomerTextBox" 
                       Style="{StaticResource ReadOnlyTextBox}"/>

                <!-- Tour Info (Read-only) -->
                <TextBlock Text="Tour" 
                         FontSize="14" 
                         FontWeight="SemiBold"/>
                <TextBox x:Name="TourTextBox" 
                       Style="{StaticResource ReadOnlyTextBox}"/>

                <!-- Total Amount (Read-only) -->
                <TextBlock Text="Total Amount" 
                         FontSize="14" 
                         FontWeight="SemiBold"/>
                <TextBox x:Name="TotalAmountTextBox" 
                       Style="{StaticResource ReadOnlyTextBox}"/>

                <!-- Tax Amount -->
                <TextBlock Text="Tax Amount (VND)" 
                         FontSize="14" 
                         FontWeight="SemiBold"/>
                <TextBox x:Name="TaxAmountTextBox" 
                       Style="{StaticResource FormTextBox}"
                       Text="0"
                       PreviewTextInput="NumberValidationTextBox"/>

                <!-- Discount Amount -->
                <TextBlock Text="Discount Amount (VND)" 
                         FontSize="14" 
                         FontWeight="SemiBold"/>
                <TextBox x:Name="DiscountAmountTextBox" 
                       Style="{StaticResource FormTextBox}"
                       Text="0"
                       PreviewTextInput="NumberValidationTextBox"/>

                <!-- Final Amount (Read-only, calculated) -->
                <TextBlock Text="Final Amount" 
                         FontSize="14" 
                         FontWeight="SemiBold"/>
                <TextBox x:Name="FinalAmountTextBox" 
                       Style="{StaticResource ReadOnlyTextBox}"/>

                <!-- Issue Date -->
                <TextBlock Text="Issue Date *" 
                         FontSize="14" 
                         FontWeight="SemiBold"/>
                <DatePicker x:Name="IssueDatePicker" 
                          Margin="0,5,0,15"/>

                <!-- Due Date -->
                <TextBlock Text="Due Date *" 
                         FontSize="14" 
                         FontWeight="SemiBold"/>
                <DatePicker x:Name="DueDatePicker" 
                          Margin="0,5,0,15"/>

                <!-- Payment Terms -->
                <TextBlock Text="Payment Terms" 
                         FontSize="14" 
                         FontWeight="SemiBold"/>
                <TextBox x:Name="PaymentTermsTextBox" 
                       Style="{StaticResource FormTextBox}"
                       MaxLength="500"
                       TextWrapping="Wrap"
                       AcceptsReturn="True"
                       Height="80"
                       Text="Payment is due within 7 days of invoice date. Late payments may incur additional charges."/>
                <TextBlock Text="(Terms and conditions for the invoice)" 
                         Style="{StaticResource InfoText}"/>

                <!-- Notes -->
                <TextBlock Text="Notes" 
                         FontSize="14" 
                         FontWeight="SemiBold"/>
                <TextBox x:Name="NotesTextBox" 
                       Style="{StaticResource FormTextBox}"
                       MaxLength="500"
                       TextWrapping="Wrap"
                       AcceptsReturn="True"
                       Height="60"/>
                <TextBlock Text="(Optional notes about the invoice)" 
                         Style="{StaticResource InfoText}"/>

                <!-- Status -->
                <TextBlock Text="Status" 
                         FontSize="14" 
                         FontWeight="SemiBold"/>
                <ComboBox x:Name="StatusComboBox" 
                        Style="{StaticResource FormComboBox}">
                    <ComboBoxItem Content="draft"/>
                    <ComboBoxItem Content="issued"/>
                    <ComboBoxItem Content="paid"/>
                    <ComboBoxItem Content="cancelled"/>
                </ComboBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                  Orientation="Horizontal" 
                  HorizontalAlignment="Right" 
                  Margin="0,20,0,0">
            <Button Content="Cancel" 
                  Style="{StaticResource CancelButton}"
                  Click="CancelButton_Click"
                  Margin="0,0,10,0"/>
            <Button Content="Update Invoice" 
                  Style="{StaticResource ActionButton}"
                  Click="UpdateInvoiceButton_Click"/>
        </StackPanel>
    </Grid>
</Window> 