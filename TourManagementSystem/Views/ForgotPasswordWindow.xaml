<Window x:Class="TourManagementSystem.Views.ForgotPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Forgot Password" 
        Height="400" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="20">
            <StackPanel>
                <TextBlock Text="ðŸ” Forgot Password" 
                         FontSize="24" 
                         FontWeight="Bold" 
                         Foreground="White" 
                         HorizontalAlignment="Center"/>
                <TextBlock Text="Reset your password" 
                         FontSize="14" 
                         Foreground="#FFF3E0" 
                         HorizontalAlignment="Center" 
                         Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Form -->
        <StackPanel Grid.Row="1" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center" 
                    Width="350" 
                    Margin="20">
            
            <!-- Instructions -->
            <TextBlock Text="Enter your email address to reset your password." 
                     FontSize="14" 
                     Foreground="#666" 
                     TextAlignment="Center" 
                     Margin="0,0,0,20"/>

            <!-- Email -->
            <TextBlock Text="Email Address *" 
                     FontSize="14" 
                     FontWeight="SemiBold" 
                     Margin="0,0,0,5"/>
            <TextBox x:Name="EmailTextBox" 
                   FontSize="14"
                   Padding="10,8"
                   BorderBrush="#E0E0E0"
                   BorderThickness="1"
                   Margin="0,0,0,20"/>

            <!-- Reset Password Button -->
            <Button x:Name="ResetPasswordButton"
                  Content="Reset Password" 
                  Background="#2196F3"
                  Foreground="White"
                  BorderThickness="0"
                  Padding="20,12"
                  FontSize="14"
                  FontWeight="SemiBold"
                  Cursor="Hand"
                  Click="ResetPasswordButton_Click"
                  Margin="0,0,0,15"/>

            <!-- Loading Indicator -->
            <ProgressBar x:Name="LoadingProgressBar" 
                       IsIndeterminate="True" 
                       Height="2" 
                       Margin="0,0,0,15"
                       Visibility="Collapsed"/>

            <!-- Back to Login -->
            <StackPanel Orientation="Horizontal" 
                      HorizontalAlignment="Center">
                <TextBlock Text="Remember your password? " 
                         FontSize="12" 
                         Foreground="#666"/>
                <TextBlock Text="Sign in here" 
                         FontSize="12" 
                         Foreground="#FF9800" 
                         Cursor="Hand"
                         TextDecorations="Underline"
                         MouseLeftButtonDown="SignInText_MouseLeftButtonDown"/>
            </StackPanel>
            


            <!-- Success Message -->
            <Border x:Name="SuccessMessage" 
                  Background="#E8F5E8" 
                  BorderBrush="#4CAF50" 
                  BorderThickness="2" 
                  CornerRadius="10" 
                  Padding="25" 
                  Margin="0,20,0,0"
                  Visibility="Collapsed">
                <StackPanel>
                    <!-- Success Icon and Title -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                        <TextBlock Text="âœ…" FontSize="28" Margin="0,0,12,0"/>
                        <TextBlock Text="Reset Password ThÃ nh CÃ´ng!" 
                                 FontSize="20" 
                                 FontWeight="Bold" 
                                 Foreground="#2E7D32"/>
                    </StackPanel>
                    
                    <!-- Password Display Box -->
                    <Border Background="White" 
                          BorderBrush="#4CAF50" 
                          BorderThickness="2" 
                          CornerRadius="8" 
                          Padding="20" 
                          Margin="0,0,0,15">
                        <TextBlock x:Name="NewPasswordText" 
                                 FontSize="18" 
                                 FontWeight="Bold"
                                 Foreground="#2E7D32" 
                                 TextAlignment="Center"
                                 TextWrapping="Wrap"/>
                    </Border>
                    
                    <!-- Warning Message -->
