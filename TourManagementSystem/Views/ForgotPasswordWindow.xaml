                             TextAlignment="Center"
                             Margin="0,0,0,20"/>
                    
                    <!-- Action Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="Thá»­ Email KhÃ¡c" 
                              Background="#FF9800"
