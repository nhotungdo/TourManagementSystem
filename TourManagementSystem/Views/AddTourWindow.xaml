<Window x:Class="TourManagementSystem.Views.AddTourWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Tour" 
        Height="600" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    
    <Window.Resources>
        <Style x:Key="FormTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="FormComboBox" TargetType="ComboBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CancelButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="#757575"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#616161"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="ðŸ—ºï¸ Add New Tour" 
                     FontSize="24" 
                     FontWeight="Bold" 
                     Margin="0,0,0,5"/>
            <TextBlock Text="Create a new tour package" 
                     FontSize="14" 
                     Foreground="#666"/>
        </StackPanel>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Tour Name -->
                <TextBlock Text="Tour Name *" 
                         FontSize="14" 
                         FontWeight="SemiBold"/>
                <TextBox x:Name="TourNameTextBox" 
                       Style="{StaticResource FormTextBox}"
                       MaxLength="100"/>

                <!-- Description -->
                <TextBlock Text="Description *" 
                         FontSize="14" 
                         FontWeight="SemiBold"/>
                <TextBox x:Name="DescriptionTextBox" 
                       Style="{StaticResource FormTextBox}"
                       MaxLength="500"
                       TextWrapping="Wrap"
                       AcceptsReturn="True"
                       Height="80"/>

                <!-- Duration -->
                <TextBlock Text="Duration (days) *" 
                         FontSize="14" 
                         FontWeight="SemiBold"/>
                <TextBox x:Name="DurationTextBox" 
                       Style="{StaticResource FormTextBox}"
                       MaxLength="3"/>

                <!-- Price -->
                <TextBlock Text="Price *" 
                         FontSize="14" 
                         FontWeight="SemiBold"/>
                <TextBox x:Name="PriceTextBox" 
                       Style="{StaticResource FormTextBox}"
                       MaxLength="10"/>

                <!-- Destination -->
                <TextBlock Text="Destination *" 
                         FontSize="14" 
                         FontWeight="SemiBold"/>
                <TextBox x:Name="DestinationTextBox" 
                       Style="{StaticResource FormTextBox}"
                       MaxLength="100"/>

                <!-- Status -->
                <TextBlock Text="Status" 
                         FontSize="14" 
                         FontWeight="SemiBold"/>
                <ComboBox x:Name="StatusComboBox" 
                        Style="{StaticResource FormComboBox}">
                    <ComboBoxItem Content="Active" IsSelected="True"/>
                    <ComboBoxItem Content="Inactive"/>
                </ComboBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                  Orientation="Horizontal" 
                  HorizontalAlignment="Right" 
                  Margin="0,20,0,0">
            <Button Content="Cancel" 
                  Style="{StaticResource CancelButton}"
                  Click="CancelButton_Click"
                  Margin="0,0,10,0"/>
            <Button Content="Add Tour" 
                  Style="{StaticResource ActionButton}"
                  Click="AddTourButton_Click"/>
        </StackPanel>
    </Grid>
</Window> 