<Page x:Class="TourManagementSystem.Views.ReportsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Reports and Analytics" 
      Background="White"
      Unloaded="Page_Unloaded">
    
    <Page.Resources>
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="StatCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="ðŸ“Š Reports and Analytics" 
                         FontSize="24" 
                         FontWeight="Bold" 
                         Margin="0,0,0,10"/>
                <TextBlock Text="Comprehensive reports and data analytics for tour management" 
                         FontSize="14" 
                         Foreground="#666"/>
            </StackPanel>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,20">
                <Button Content="ðŸ”„ Refresh Data" 
                      Style="{StaticResource ActionButton}"
                      Click="RefreshButton_Click"/>
                <Button Content="ðŸ“„ Generate Report" 
                      Style="{StaticResource ActionButton}"
                      Click="GenerateReportButton_Click"/>
                <Button Content="ðŸ“Š Export CSV" 
                      Style="{StaticResource ActionButton}"
                      Click="ExportDataButton_Click"/>
            </StackPanel>

            <!-- Statistics Cards -->
            <Grid Grid.Row="2" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Total Tours -->
                <Border Grid.Column="0" Style="{StaticResource StatCard}">
                    <StackPanel>
                        <TextBlock Text="ðŸ—ºï¸ Total Tours" 
                                 FontSize="16" 
                                 FontWeight="SemiBold" 
                                 Foreground="#666"/>
                        <TextBlock x:Name="TotalToursText" 
                                 Text="0" 
                                 FontSize="32" 
                                 FontWeight="Bold" 
                                 Foreground="#2196F3"/>
                    </StackPanel>
                </Border>

                <!-- Total Bookings -->
                <Border Grid.Column="1" Style="{StaticResource StatCard}">
                    <StackPanel>
                        <TextBlock Text="ðŸ“‹ Total Bookings" 
                                 FontSize="16" 
                                 FontWeight="SemiBold" 
                                 Foreground="#666"/>
                        <TextBlock x:Name="TotalBookingsText" 
                                 Text="0" 
                                 FontSize="32" 
                                 FontWeight="Bold" 
                                 Foreground="#4CAF50"/>
                    </StackPanel>
                </Border>

                <!-- Total Revenue -->
                <Border Grid.Column="2" Style="{StaticResource StatCard}">
                    <StackPanel>
                        <TextBlock Text="ðŸ’° Total Revenue" 
                                 FontSize="16" 
                                 FontWeight="SemiBold" 
                                 Foreground="#666"/>
                        <TextBlock x:Name="TotalRevenueText" 
                                 Text="$0" 
                                 FontSize="32" 
                                 FontWeight="Bold" 
                                 Foreground="#FF9800"/>
                    </StackPanel>
                </Border>

                <!-- Active Users -->
                <Border Grid.Column="3" Style="{StaticResource StatCard}">
                    <StackPanel>
                        <TextBlock Text="ðŸ‘¥ Active Users" 
                                 FontSize="16" 
                                 FontWeight="SemiBold" 
                                 Foreground="#666"/>
                        <TextBlock x:Name="ActiveUsersText" 
                                 Text="0" 
                                 FontSize="32" 
                                 FontWeight="Bold" 
                                 Foreground="#9C27B0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Data Grids -->
            <Grid Grid.Row="3" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Recent Bookings -->
                <Border Grid.Column="0" Style="{StaticResource StatCard}" Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="ðŸ“‹ Recent Bookings" 
                                 FontSize="18" 
                                 FontWeight="Bold" 
                                 Margin="0,0,0,15"/>
                        <DataGrid x:Name="RecentBookingsDataGrid" 
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                CanUserDeleteRows="False"
                                CanUserReorderColumns="True"
                                CanUserResizeColumns="True"
                                GridLinesVisibility="Horizontal"
                                HeadersVisibility="Column"
                                MaxHeight="300">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Customer" 
                                                  Binding="{Binding Customer.FullName}" 
                                                  Width="120"/>
                                <DataGridTextColumn Header="Tour" 
                                                  Binding="{Binding Schedule.Tour.TourName}" 
                                                  Width="150"/>
                                <DataGridTextColumn Header="Date" 
                                                  Binding="{Binding BookingDate, StringFormat=dd/MM/yyyy}" 
                                                  Width="100"/>
                                <DataGridTextColumn Header="Status" 
                                                  Binding="{Binding Status}" 
                                                  Width="80"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>

                <!-- Popular Tours -->
                <Border Grid.Column="1" Style="{StaticResource StatCard}" Margin="10,0,0,0">
                    <StackPanel>
                        <TextBlock Text="ðŸ† Popular Tours" 
                                 FontSize="18" 
                                 FontWeight="Bold" 
                                 Margin="0,0,0,15"/>
                        <DataGrid x:Name="PopularToursDataGrid" 
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                CanUserDeleteRows="False"
                                CanUserReorderColumns="True"
                                CanUserResizeColumns="True"
                                GridLinesVisibility="Horizontal"
                                HeadersVisibility="Column"
                                MaxHeight="300">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Tour Name" 
                                                  Binding="{Binding TourName}" 
                                                  Width="150"/>
                                <DataGridTextColumn Header="Bookings" 
                                                  Binding="{Binding BookingCount}" 
                                                  Width="80"/>
                                <DataGridTextColumn Header="Revenue" 
                                                  Binding="{Binding TotalRevenue, StringFormat=C}" 
                                                  Width="100"/>
                                <DataGridTextColumn Header="Rating" 
                                                  Binding="{Binding AverageRating, StringFormat=F1}" 
                                                  Width="80"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Additional Info -->
            <Border Grid.Row="4" Style="{StaticResource StatCard}">
                <StackPanel>
                    <TextBlock Text="â„¹ï¸ Report Information" 
                             FontSize="18" 
                             FontWeight="Bold" 
                             Margin="0,0,0,15"/>
                    <TextBlock Text="â€¢ Revenue calculations include only confirmed bookings" 
                             FontSize="14" 
                             Foreground="#666" 
                             Margin="0,0,0,5"/>
                    <TextBlock Text="â€¢ Popular tours are ranked by number of confirmed bookings" 
                             FontSize="14" 
                             Foreground="#666" 
                             Margin="0,0,0,5"/>
                    <TextBlock Text="â€¢ Reports can be exported as text files or CSV data" 
                             FontSize="14" 
                             Foreground="#666" 
                             Margin="0,0,0,5"/>
                    <TextBlock Text="â€¢ Data is refreshed in real-time when you click Refresh" 
                             FontSize="14" 
                             Foreground="#666"/>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</Page> 