<Window x:Class="TourManagementSystem.Views.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New User" 
        Height="600" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    
    <Window.Resources>
        <Style x:Key="FormTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="FormPasswordBox" TargetType="PasswordBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="FormComboBox" TargetType="ComboBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CancelButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="#757575"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#616161"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="âž• Add New User" 
                     FontSize="24" 
                     FontWeight="Bold" 
                     Margin="0,0,0,5"/>
            <TextBlock Text="Create a new user account" 
                     FontSize="14" 
                     Foreground="#666"/>
        </StackPanel>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Username -->
                <TextBlock Text="Username *" 
                         FontSize="14" 
                         FontWeight="SemiBold"/>
                <TextBox x:Name="UsernameTextBox" 
                       Style="{StaticResource FormTextBox}"
                       MaxLength="50"/>

                <!-- Password -->
                <TextBlock Text="Password *" 
                         FontSize="14" 
                         FontWeight="SemiBold"/>
                <PasswordBox x:Name="PasswordBox" 
                          Style="{StaticResource FormPasswordBox}"
                          MaxLength="100"/>

                <!-- Confirm Password -->
                <TextBlock Text="Confirm Password *" 
                         FontSize="14" 
                         FontWeight="SemiBold"/>
                <PasswordBox x:Name="ConfirmPasswordBox" 
                          Style="{StaticResource FormPasswordBox}"
                          MaxLength="100"/>

                <!-- Full Name -->
                <TextBlock Text="Full Name *" 
                         FontSize="14" 
                         FontWeight="SemiBold"/>
                <TextBox x:Name="FullNameTextBox" 
                       Style="{StaticResource FormTextBox}"
                       MaxLength="100"/>

                <!-- Email -->
                <TextBlock Text="Email *" 
                         FontSize="14" 
                         FontWeight="SemiBold"/>
                <TextBox x:Name="EmailTextBox" 
                       Style="{StaticResource FormTextBox}"
                       MaxLength="100"/>

                <!-- Phone -->
                <TextBlock Text="Phone" 
                         FontSize="14" 
                         FontWeight="SemiBold"/>
                <TextBox x:Name="PhoneTextBox" 
                       Style="{StaticResource FormTextBox}"
                       MaxLength="20"/>

                <!-- Role -->
                <TextBlock Text="Role *" 
                         FontSize="14" 
                         FontWeight="SemiBold"/>
                <ComboBox x:Name="RoleComboBox" 
                        Style="{StaticResource FormComboBox}">
                    <ComboBoxItem Content="customer" IsSelected="True"/>
                    <ComboBoxItem Content="staff"/>
                    <ComboBoxItem Content="admin"/>
                </ComboBox>

                <!-- Status -->
                <TextBlock Text="Status" 
                         FontSize="14" 
                         FontWeight="SemiBold"/>
                <ComboBox x:Name="StatusComboBox" 
                        Style="{StaticResource FormComboBox}">
                    <ComboBoxItem Content="Active" IsSelected="True"/>
                    <ComboBoxItem Content="Inactive"/>
                </ComboBox>

                <!-- Address -->
                <TextBlock Text="Address" 
                         FontSize="14" 
                         FontWeight="SemiBold"/>
                <TextBox x:Name="AddressTextBox" 
                       Style="{StaticResource FormTextBox}"
                       MaxLength="200"
                       TextWrapping="Wrap"
                       AcceptsReturn="True"
                       Height="60"/>

                <!-- Date of Birth -->
                <TextBlock Text="Date of Birth" 
                         FontSize="14" 
                         FontWeight="SemiBold"/>
                <DatePicker x:Name="DateOfBirthPicker" 
                          Margin="0,5,0,15"
                          FontSize="14"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                  Orientation="Horizontal" 
                  HorizontalAlignment="Right" 
                  Margin="0,20,0,0">
            <Button Content="Cancel" 
                  Style="{StaticResource CancelButton}"
                  Click="CancelButton_Click"
                  Margin="0,0,10,0"/>
            <Button Content="Add User" 
                  Style="{StaticResource ActionButton}"
                  Click="AddUserButton_Click"/>
        </StackPanel>
    </Grid>
</Window> 