<Page x:Class="TourManagementSystem.Views.NotificationsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Notifications" 
      Background="White">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="ðŸ”” Notifications" 
                         FontSize="28" 
                         FontWeight="Bold" 
                         Foreground="#333"
                         Margin="0,0,0,10"/>
                <TextBlock Text="View your system notifications" 
                         FontSize="14" 
                         Foreground="#666"/>
            </StackPanel>

            <!-- Notifications List -->
            <ScrollViewer Grid.Row="1" x:Name="NotificationsScrollViewer">
                <StackPanel x:Name="NotificationsStackPanel">
                    <!-- Notifications will be loaded here dynamically -->
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </ScrollViewer>
</Page> 